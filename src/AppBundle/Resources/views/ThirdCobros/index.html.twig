{% extends "frontend.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Cobros de servicios de terceros <small>listado</small></h1>
        </div>
    </div>

    <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a>Servicios</a></li>
        <li role="presentation"><a href="{{ path('app_thirdcobros_indexcobros') }}">Cobros realizados</a></li>
    </ul>
    <br>
    <div class="row" style="margin-bottom: 10px;">
        <div class="col-lg-12">
            <div class="pull-right">
                <button type="button" id="btnPrepareCobro" class="btn btn-success">Realizar cobro</button>
                <div class="btn-group">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        Herramientas
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu pull-right" role="menu">
                        <li>
                            <a href="#" role="button" id="link-select-all">
                                <i class="glyphicon glyphicon-check"></i>
                                Seleccionar todos
                            </a>
                        </li>
                        <li>
                            <a href="#" role="button" id="link-select-none">
                                <i class="glyphicon glyphicon-unchecked"></i>
                                Borrar selecci√≥n
                            </a>
                        </li>
                    </ul>
                </div>
                <button type="button" class="btn btn-default" data-toggle="collapse" data-target="#collapseFilter"><span
                            class="fa fa-filter"></span></button>
            </div>
        </div>
    </div>
    <form action="" id="formFilter">
        <div class="panel panel-default collapse" id="collapseFilter">
            <div class="panel-heading">
                <h3 class="panel-title">Opciones de filtro</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-3 col-xs-6">
                        {{ form_row(filter.startAt.left_date, {label: "Desde"}) }}
                    </div>
                    <div class="col-sm-3 col-xs-6">
                        {{ form_row(filter.startAt.right_date, {label: "Hasta"}) }}
                    </div>
                    <div class="col-sm-3 col-xs-12">
                        {{ form_row(filter.cobrado, {label: "Cobrado"}) }}
                    </div>
                </div>
            </div>
        </div>
    </form>
    <table class="table table-striped table-bordered table-hover" id="services"></table>
{% endblock %}

{% block page_javascripts %}
    <script type="text/javascript">
        $(document).ready(function() {
            App.ThirdCobros.Index.init();
        });
    </script>
{% endblock %}
