{% extends "frontend.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Tipos de servicio <small>ver datos</small></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Datos del servicio
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label>Nombre</label>
                        <div class="form-control-static">{{ record.name }}</div>
                    </div>
                </div>
            </div>
            <a href="{{ path("app_admin_servicetypes_edit", {"id": record.id}) }}" class="btn btn-success">
                <i class="glyphicon glyphicon-edit"></i>
                Editar
            </a>
            <a href="{{ path("app_admin_servicetypes_index") }}" class="btn btn-default">
                <i class="fa fa-tables"></i>
                Ir al listado
            </a>
        </div>
    </div>
    <!-- /.row -->
{% endblock %}
