{% extends "frontend.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Reservas de clásicos <small>listado</small></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row" style="margin-bottom: 10px;">
        <div class="col-lg-12">
            <div class="pull-right">
                <a href="{{ path("app_reservasclasicos_new") }}" class="btn btn-success">
                    <i class="fa fa-plus-circle"></i>
                    Crear reserva para clásicos
                </a>
                <div class="btn-group">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        Herramientas
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu pull-right" role="menu">
                        <li>
                            <a href="javascript:;" role="button" id="link-select-all">
                                <i class="glyphicon glyphicon-check"></i>
                                Seleccionar todos
                            </a>
                        </li>
                        <li>
                            <a href="javascript:;" role="button" id="link-select-none">
                                <i class="glyphicon glyphicon-unchecked"></i>
                                Borrar selección
                            </a>
                        </li>
                    </ul>
                </div>
                <button type="button" data-toggle="collapse" data-target="#collapseFilter" class="btn btn-default">
                    <i class="fa fa-filter"></i></button>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div id="collapseFilter" class="collapse">
        <form action="#" id="formFilter">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Opciones de filtro</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-3">
                            {{ form_row(filter.startAt.left_date, {label: "Desde"}) }}
                        </div>
                        <div class="col-sm-3">
                            {{ form_row(filter.startAt.right_date, {label: "Hasta"}) }}
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="dataTable_wrapper">
        <table class="table table-striped table-bordered table-hover" id="dataTables-reservas" width="100%"></table>
    </div>
    <!-- /.table-responsive -->
{% endblock %}

{% block page_stylesheets %}
    <style type="text/css">
        button[data-toggle="collapse"][aria-expanded="true"] {
            color: #337ab7;
        }
        button[data-toggle="collapse"][aria-expanded="true"]:hover {
            color: #23527c;
        }
    </style>
{% endblock %}

{% block page_javascripts %}
    <script type="text/javascript">
        $(document).ready(function() {
            App.ReservasClasicos.Index.init();
        });
    </script>
{% endblock %}
