{% extends "frontend.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Mensajes <small>crear</small></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    {{ form_start(form, {"action": path("app_messages_create"), "attr": {"role": "form", "id": "message"}}) }}
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Mensaje
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                {{ form_label(form.reader, 'Destinatario', {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.reader, {'attr': {'class': 'form-control'}}) }}
                                <div class="help-block"></div>
                            </div>
                            <div class="col-lg-12">
                                {{ form_label(form.content, 'Contenido', {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                                <div class="help-block"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-success" type="submit">
                    <i class="fa fa-save"></i>
                    Guardar
                </button>
                <a href="{{ path("homepage") }}" class="btn btn-default">
                    <i class="fa fa-undo"></i>
                    Descartar
                </a>
            </div>
        </div>
        <!-- /.row -->
    {{ form_end(form) }}
{% endblock %}

{% block page_javascripts %}
    <script src="{{ asset("js/form-message.js") }}"></script>
    <script>
        $(document).ready(function() {
            App.Message.init();
        });
    </script>
{% endblock %}