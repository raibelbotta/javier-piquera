{% extends "frontend.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Localidades <small>ver datos</small></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Datos de la localidad
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <strong>Nombre</strong><br>
                            {{ record.name }}
                            <div class="help-block"></div>
                        </div>
                    </div>                    
                </div>
            </div>
            <a href="{{ path("app_locations_edit", {"id": record.id}) }}" class="btn btn-success">
                <i class="glyphicon glyphicon-edit"></i>
                Editar
            </a>
            <a href="{{ path("app_locations_index") }}" class="btn btn-default">
                <i class="fa fa-tables"></i>
                Ir al listado
            </a>
        </div>
    </div>
    <!-- /.row -->
{% endblock %}