{% extends "frontend.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Localidades <small>listado</small></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row" style="margin-bottom: 10px;">
        <div class="col-lg-12">
            <div class="pull-right">
                <a href="{{ path("app_locations_new") }}" class="btn btn-success">
                    <i class="fa fa-plus-circle"></i>
                    Crear localidad
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-locations">
                    <thead>
                        <tr>
                            <th data-name="name">Nombre</th>
                            <th class="no-sort no-search" width="100">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for record in query.result %}
                            <tr>
                                <td>{{ record }}</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path("app_locations_view", {"id": record.id}) }}" class="btn btn-default btn-xs"
                                            title="Ver detalle">
                                            <i class="glyphicon glyphicon-file"></i>
                                        </a>
                                        <a href="{{ path("app_locations_edit", {"id": record.id}) }}" class="btn btn-info btn-xs"
                                            title="Editar">
                                            <i class="glyphicon glyphicon-edit"></i>
                                        </a>
                                        <a href="{{ path("app_locations_delete", {"id": record.id}) }}" class="btn btn-danger btn-delete btn-xs"
                                            title="Eliminar">
                                            <i class="glyphicon glyphicon-remove"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="modal fade" data-for="dataTables-locations">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" data-dismiss="modal" class="close">&times;</button>
                    <h4 class="modal-title">Confirmar eliminación</h4>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger">
                        Se dispone a eliminar la información de una localización. ¿Desea continuar?
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btn-md">
                        <i class="fa fa-remove"></i>
                        Eliminar
                    </button>
                    <button class="btn btn-default btn-md" data-dismiss="modal">
                        <i class="fa fa-undo"></i>
                        Cancelar
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_javascripts %}
    <script src="{{ asset("js/locations.js") }}"></script>
    <script>
        $(document).ready(function() {
            App.Locations.init();
        });
    </script>
{% endblock %}
