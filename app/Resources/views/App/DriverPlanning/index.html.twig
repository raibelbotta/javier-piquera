{% extends "base.html.twig" %}

{% block title %}Planifiación de conductores{% endblock %}

{% block stylesheets %}
    {% stylesheets filter="cssrewrite,?scssphp" output="compiled/css/driver-planing.min.css"
        "plugins/jquery.ui/css/jquery-ui.min.css"
        "plugins/bootstrap/css/bootstrap.css"
        "plugins/bootstrap/css/bootstrap-theme.css"
        "plugins/tooltipster-master/css/tooltipster.css"
        "plugins/tooltipster-master/css/tooltipster-custom.css"
        "plugins/fontawesome/css/font-awesome.min.css"
        "plugins/jquery.dataTables/datatables.min.css"
        "plugins/select2/css/select2.min.css"
        "css/sb-admin-2.css"
        "css/styles.css"
        %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12" style="min-height: 12px;"></div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <div class="pull-left">
                    <h4>Panel de planificación de conductores</h4>
                </div>
                <div class="pull-right form-inline">
                    <label for="from-date">Desde</label>
                    <input type="text" id="from-date" class="form-control input-sm datepicker">
                    <label for="to-date">Hasta</label>
                    <input type="text" id="to-date" class="form-control input-sm datepicker">
                    <a href="{{ path("homepage") }}" class="btn btn-default">
                        Cerrar
                    </a>
                </div>
            </div>
        </div>
        <div class="row">

        </div>
        <div class="row">
            <div class="col-xs-12">&nbsp;</div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <table id="table-records" class="table table-striped table-condensed" data-url="{{ path("app_driverplanning_getdata") }}" data-driver-url="{{ path("app_driverplanning_getdrivers") }}">
                    <thead>
                        <tr>
                            <th>Número</th>
                            <th>Agencia</th>
                            <th>Referencia</th>
                            <th>Servicio</th>
                            <th>Descripción</th>
                            <th>Inicio</th>
                            <th>Terminación</th>
                            <th>Conductor</th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {% javascripts filter="?jsqueeze" output="compiled/js/driver-planning.min.js"
        "plugins/jquery/jquery-3.3.1.js"
        "plugins/jquery/jquery-migrate-3.0.0.min.js"
        "plugins/jquery.ui/js/jquery-ui-1.11.4.min.js"
        "plugins/bootstrap/js/bootstrap.min.js"
        "plugins/jquery.validate/jquery.validate.min.js"
        "plugins/jquery.validate/localization/messages_es.min.js"
        "plugins/tooltipster-master/js/jquery.tooltipster.min.js"
        "plugins/jquery.dataTables/datatables.min.js"
        "plugins/select2/js/select2.min.js"
        "plugins/select2/js/i18n/es.js"
        "js/driver-planning.js"
        %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script type="text/javascript">
        $(document).ready(function() {
            App.init();
        });
    </script>
{% endblock %}
