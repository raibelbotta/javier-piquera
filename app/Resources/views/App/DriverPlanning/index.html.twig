{% extends "base.html.twig" %}

{% block title %}Planifiación de conductores{% endblock %}

{% block stylesheets %}
    {% stylesheets filter="cssrewrite,?scssphp" output="compiled/css/driver-planing.min.css"
        "plugins/jquery.ui/css/jquery-ui.min.css"
        "plugins/bootstrap/css/bootstrap.css"
        "plugins/bootstrap/css/bootstrap-theme.css"
        "plugins/tooltipster-master/css/tooltipster.css"
        "plugins/tooltipster-master/css/tooltipster-custom.css"
        "plugins/fontawesome/css/font-awesome.min.css"
        "plugins/jquery.dataTables/datatables.min.css"
        "plugins/select2/css/select2.min.css"
        "css/sb-admin-2.css"
        "css/styles.css"
        %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}

    <script src="{{ asset('js/require-config.js') }}"></script>
    <script src="{{ asset('js/require.js') }}"></script>
    <script type="text/javascript">
        require(['bootstrap']);
    </script>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12" style="min-height: 12px;"></div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <div class="pull-left">
                    <h4>Panel de planificación de conductores</h4>
                </div>
                <div class="pull-right form-inline">
                    <label for="from-date">Desde</label>
                    <div class="input-group input-group-sm">
                        <input type="text" id="from-date" class="form-control datepicker" value="{{ today|date('d/m/Y') }}">
                        <span class="input-group-addon">
                            <span class="fa fa-calendar"></span>
                        </span>
                    </div>
                    <label for="to-date">Hasta</label>
                    <div class="input-group input-group-sm">
                        <input type="text" id="to-date" class="form-control input-sm datepicker" value="{{ next_7_days|date('d/m/Y') }}">
                        <span class="input-group-addon">
                            <span class="fa fa-calendar"></span>
                        </span>
                    </div>
                    <a href="{{ path("homepage") }}" class="btn btn-default">
                        Cerrar
                    </a>
                </div>
            </div>
        </div>
        <div class="row">

        </div>
        <div class="row">
            <div class="col-xs-12">&nbsp;</div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <table id="table-records" class="table table-striped table-condensed" data-url="{{ path("app_driverplanning_getdata") }}" data-driver-url="{{ path("app_driverplanning_getdrivers") }}">
                    <thead>
                        <tr>
                            <th>Número</th>
                            <th>Cliente</th>
                            <th>Referencia</th>
                            <th>Servicio</th>
                            <th>Descripción</th>
                            <th>Inicio</th>
                            <th>Terminación</th>
                            <th>Conductor</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        require(['js/driver-planning']);
    </script>
{% endblock %}
