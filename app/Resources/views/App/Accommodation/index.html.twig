{% extends "frontend-requirejs.html.twig" %}

{% form_theme filter _self %}

{% block accommodation_filter_form_row %}
    <div class="row">
        <div class="col-sm-2">
            {{ form_label(form.startDate) }}
            <div class="row">
                <div class="col-xs-6 col-sm-12">
                    {{ form_row(form.startDate.left_date) }}
                </div>
                <div class="col-xs-6 col-sm-12">
                    {{ form_row(form.startDate.right_date) }}
                </div>
            </div>
        </div>
        <div class="col-sm-2">
            {{ form_label(form.endDate) }}
            <div class="row">
                <div class="col-xs-6 col-sm-12">
                    {{ form_row(form.endDate.left_date) }}
                </div>
                <div class="col-xs-6 col-sm-12">
                    {{ form_row(form.endDate.right_date) }}
                </div>
            </div>
        </div>
        <div class="col-sm-2">
            {{ form_label(form.nights) }}
            <div class="row">
                <div class="col-xs-6 col-sm-12">
                    {{ form_row(form.nights.left_number) }}
                </div>
                <div class="col-xs-6 col-sm-12">
                    {{ form_row(form.nights.right_number) }}
                </div>
            </div>
        </div>
        <div class="col-sm-2">
            <label class="control-label hidden-xs">&nbsp;</label>
            {{ form_row(form.reference) }}
        </div>
        <div class="col-sm-2">
            <label class="control-label hidden-xs">&nbsp;</label>
            {{ form_row(form.leadClient) }}
        </div>
        <div class="col-sm-2">
            {{ form_label(form.pax) }}
            <div class="row">
                <div class="col-xs-6 col-sm-12">
                    {{ form_row(form.pax.left_number) }}
                </div>
                <div class="col-xs-6 col-sm-12">
                    {{ form_row(form.pax.right_number) }}
                </div>
            </div>
        </div>
        <div class="col-sm-2">
            <label class="control-label hidden-xs">&nbsp;</label>
            {{ form_row(form.fromLocation) }}
        </div>
        <div class="col-sm-2">
            <label class="control-label hidden-xs">&nbsp;</label>
            {{ form_row(form.fromRegion) }}
        </div>
        <div class="col-sm-2">
            {{ form_label(form.cost) }}
            <div class="row">
                <div class="col-xs-6 col-sm-12">
                    {{ form_row(form.cost.left_number) }}
                </div>
                <div class="col-xs-6 col-sm-12">
                    {{ form_row(form.cost.right_number) }}
                </div>
            </div>
        </div>
        <div class="col-sm-2">
            <label class="control-label hidden-xs">&nbsp;</label>
            {{ form_row(form.paidAt) }}
        </div>
    </div>
{% endblock %}

