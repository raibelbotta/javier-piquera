            <h4 class="panel-title">Opciones de filtro</h4>
        </div>
        <div class="panel-body">
            <form action="" role="form" id="filter">
                {{ form_row(filter) }}
                {{ form_rest(filter) }}
            </form>
        </div>
    </div>
    <div class="dataTable_wrapper">
        <table class="table table-striped table-bordered table-hover" id="table-accommodations" width="100%"></table>
