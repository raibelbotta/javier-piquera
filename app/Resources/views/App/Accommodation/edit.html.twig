{% extends '::frontend-requirejs.html.twig' %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Reservas de hospedaje <small>modificar</small></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    {{ form_start(form, {"attr": {"role": "form", "id": "reserva-hospedaje"}}) }}
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-sm-5">{{ form_row(form.startDate) }}</div>
                <div class="col-sm-5">{{ form_row(form.endDate) }}</div>
                <div class="col-sm-2">{{ form_row(form.nights) }}</div>
            </div>
            {{ form_row(form.reference) }}
            <div class="row">
                <div class="col-sm-6">{{ form_row(form.leadClient) }}</div>
                <div class="col-sm-6">{{ form_row(form.pax) }}</div>
            </div>
            <div class="row">
                <div class="col-sm-6">{{ form_row(form.provider) }}</div>
                <div class="col-sm-6">{{ form_row(form.cost) }}</div>
            </div>
            {{ form_row(form.details) }}
            <button class="btn btn-success" type="submit">
                <i class="fa fa-save"></i>
                Guardar
            </button>
            <a href="{{ path("app_accommodation_index") }}" class="btn btn-default">
                <i class="fa fa-undo"></i>
                Volver al listado
            </a>
        </div>
    </div>
    <!-- /.row -->
    {{ form_end(form) }}
{% endblock %}

{% block page_javascripts %}
    <script>
        require([
            'jquery',
            'plugins/datepicker/bootstrap-datepicker'
        ], function($) {
            'use strict';

            $('#{{ form.startDate.vars.id }}, #{{ form.endDate.vars.id }}').each(function() {
                $(this).datepicker({
                    format: 'dd/mm/yyyy',
                    autoclose: true
                });
            });
        });
    </script>
{% endblock %}