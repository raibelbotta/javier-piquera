{% extends "frontend-requirejs.html.twig" %}

{% form_theme form _self %}

{% block import_accommodation_form_row %}
    {{ form_row(form.file) }}
    {{ form_row(form.removeBeforeImport) }}
    <div class="row" id="zPellS" style="display: none;">
        <div class="col-xs-6 col-sm-3 col-md-2">
            {{ form_row(form.year) }}
        </div>
        <div class="col-xs-6 col-sm-3 col-md-2">
            {{ form_row(form.month) }}
        </div>
    </div>
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Reservas de hospedaje <small>importar</small></h1>


        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    {{ form_start(form, {"attr": {"role": "form", "id": "import"}}) }}
    <div class="row">
        <div class="col-lg-12">
            {{ form_row(form) }}
            <button class="btn btn-success" type="submit">
                <i class="fa fa-save"></i>
                Proceder
            </button>
            <a href="{{ path("app_accommodation_index") }}" class="btn btn-default">
                <i class="fa fa-undo"></i>
                Cancelar
            </a>
        </div>
    </div>
    <!-- /.row -->
    {{ form_end(form) }}
{% endblock %}

{% block page_javascripts %}
    <script>
        requirejs([
            'js/accommodations.import'
        ], function(app) {
            'use strict';

            app();
        });
    </script>
{% endblock %}
