{% extends "frontend.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Usuarios <small>crear</small></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    {{ form_start(form, {action: path("app_users_create"), attr: {role: "form", id: "user"}}) }}
        <div class="row">
            {{ include("App/Users/form.html.twig") }}
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="actions">
                    <button class="btn btn-success" type="submit">
                        <i class="fa fa-save"></i>
                        Guardar
                    </button>
                    <a href="{{ path("app_users_index") }}" class="btn btn-default">
                        <i class="fa fa-undo"></i>
                        Cancelar
                    </a>
                </div>
            </div>
        </div>
        <!-- /.row -->
    {{ form_end(form) }}
{% endblock %}

{% block page_javascripts %}
    <script>
        $(document).ready(function() {
            App.Users.Form.init();
        });
    </script>
{% endblock %}
