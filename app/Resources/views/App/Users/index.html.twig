{% extends "frontend.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Usuarios <small>listado</small></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row" style="margin-bottom: 10px;">
        <div class="col-lg-12">
            <div class="pull-right">
                <a href="{{ path("app_users_new") }}" class="btn btn-success">
                    <i class="fa fa-plus-circle"></i>
                    Crear usuario
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-users">
                    <thead>
                        <tr>
                            <th>Usuario</th>
                            <th>Nombre completo</th>
                            <th>Perfil</th>
                            <th class="no-sort no-search">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for record in records %}
                            <tr>
                                <td>{{ record.username }}</td>
                                <td>{{ record.fullName }}</td>
                                <td>{{ include("App/Users/_user_group.html.twig", {user: record}) }}</td>
                                <td width="100" class="text-right">
                                    <a href="{{ path("app_users_view", {id: record.id}) }}" class="btn btn-default btn-xs" title="Ver detalle"><i class="glyphicon glyphicon-file"></i></a>
                                    <a href="{{ path("app_users_edit", {id: record.id}) }}" class="btn btn-info btn-xs" title="Editar"><i class="glyphicon glyphicon-edit"></i></a>
                                    <a href="{{ path("app_users_delete", {id: record.id}) }}" class="btn btn-danger btn-xs btn-delete" title="Eliminar"><i class="glyphicon glyphicon-remove"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="modal fade" data-for="dataTables-users">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" data-dismiss="modal" class="close">&times;</button>
                    <h4 class="modal-title">Confirmar eliminación</h4>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger">
                        Se dispone a eliminar la información de un usuario. ¿Desea continuar?
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-danger btn-md">
                        <i class="fa fa-remove"></i>
                        Eliminar
                    </a>
                    <button class="btn btn-default btn-md" data-dismiss="modal">
                        <i class="fa fa-undo"></i>
                        Cancelar
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_javascripts %}
    <script>
        $(document).ready(function() {
            App.Users.Index.init();
        });
    </script>
{% endblock %}
