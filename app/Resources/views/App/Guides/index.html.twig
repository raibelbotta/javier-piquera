{% extends "frontend.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Guías <small>listado</small></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row" style="margin-bottom: 10px;">
        <div class="col-lg-12">
            <div class="pull-right">
                <a href="{{ path("app_guides_new") }}" class="btn btn-success">
                    <i class="fa fa-plus-circle"></i>
                    Crear guía
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-guides" data-ajax-url="{{ path("app_guides_getdata") }}" data-serverside="true">
                    <thead>
                        <tr>
                            <th data-name="name">Nombre</th>
                            <th data-name="contactInfo">Información de contacto</th>
                            <th class="no-sort no-search" width="80">Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="modal fade" data-for="dataTables-guides">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" data-dismiss="modal" class="close">&times;</button>
                    <h4 class="modal-title">Confirmar eliminación</h4>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger">
                        Se dispone a eliminar un guía. ¿Desea continuar?
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btn-md">
                        <i class="fa fa-remove"></i>
                        Eliminar
                    </button>
                    <button class="btn btn-default btn-md" data-dismiss="modal">
                        <i class="fa fa-undo"></i>
                        Cancelar
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_javascripts %}
    <script>
        $(document).ready(function() {
            App.Guides.Index.init();
        });
    </script>
{% endblock %}
