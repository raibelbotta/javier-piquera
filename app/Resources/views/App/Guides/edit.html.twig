{% extends "frontend.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Gu√≠as <small>editar</small></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    {{ form_start(form, {action: path("app_guides_update", {id: form.vars.data.id}), attr: {role: "form", id: "guide"}}) }}
        <div class="row">
            <div class="col-lg-12">
                {{ include("App/Guides/form.html.twig") }}
                <button class="btn btn-success" type="submit">
                    <i class="fa fa-save"></i>
                    Guardar
                </button>
                <a href="{{ path("app_guides_index") }}" class="btn btn-default">
                    <i class="fa fa-undo"></i>
                    Cancelar
                </a>
            </div>
        </div>
        <!-- /.row -->
    {{ form_end(form) }}
{% endblock %}

{% block page_javascripts %}
    <script>
        $(document).ready(function() {
            App.Guides.Form.init();
        });
    </script>
{% endblock %}
