{% extends "::frontend.html.twig" %}

{% block page_stylesheets %}
    <link href="{{ asset("css/timeline.css") }}" rel="stylesheet">
    <link href="{{ asset("plugins/morrisjs/morris.css") }}" rel="stylesheet">
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Panel de control</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-plus-circle fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">&nbsp;</div>
                            <div>&nbsp;</div>
                        </div>
                    </div>
                </div>
                <a href="{{ path("app_reservas_new") }}">
                    <div class="panel-footer">
                        <span class="pull-left">Crear reserva</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-green">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-cab fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ totalReservas }}</div>
                            <div>Reservas registradas</div>
                        </div>
                    </div>
                </div>
                <a href="{{ path("app_reservas_index") }}">
                    <div class="panel-footer">
                        <span class="pull-left">Ver listado</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-red">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3"><i class="fa fa-car fa-5x"></i></div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ total_clasicos }}</div>
                            <div>Cl치sicos</div>
                        </div>
                    </div>
                </div>
                <a href="{{ path("app_reservasclasicos_index") }}">
                    <div class="panel-footer">
                        <span class="pull-left">Ver listado</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <i class="fa fa-info-circle fa-lg"></i>
            Notificaciones
        </div>
        <div class="panel-body">
            <div class="list-group">
                {% if incompleteReservasForTomorrow > 0 %}
                    <a href="{{ path("app_reservas_index") }}" class="list-group-item">
                        <span class="text-warning">{{ incompleteReservasForTomorrow }} reservas incompletas para ma침ana</span>
                    </a>
                {% endif %}
                <a href="{{ path("app_reservas_index") }}" class="list-group-item">
                            <span class="text-info">
                                {% if readyReservasForTomorrow > 0 %}
                                    {{ readyReservasForTomorrow }} reserva(s) lista(s) para ma침ana
                                {% else %}
                                    No hay reservas listas para ma침ana
                                {% endif %}
                            </span>
                </a>
                <a href="#" class="list-group-item">
                    <span class="text-warning">{{ notExecutedReservas }} hasta ayer que no se han ejecutado</span>
                </a>
            </div>
        </div>
    </div>
{% endblock page_content %}
