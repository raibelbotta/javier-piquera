{% extends "frontend.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Conductores <small>ver datos</small></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Datos del conductor
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <strong>Nombre</strong><br>
                            {{ record.name }}
                            <div class="help-block"></div>
                        </div>
                        <div class="col-lg-12">
                            <strong>Informaci√≥n de contacto</strong><br>
                            {{ record.contactInfo|raw }}
                            <div class="help-block"></div>
                        </div>
                    </div>
                </div>
            </div>
            <a href="{{ path("app_drivers_edit", {"id": record.id}) }}" class="btn btn-success">
                <i class="glyphicon glyphicon-edit"></i>
                Editar
            </a>
            <a href="{{ path("app_drivers_index") }}" class="btn btn-default">
                <i class="fa fa-tables"></i>
                Ir al listado
            </a>
        </div>
    </div>
    <!-- /.row -->
{% endblock %}

{% block page_javascripts %}
    <script src="{{ asset("js/form-driver.js") }}"></script>
    <script>
        $(document).ready(function() {
            App.Driver.init();
        });
    </script>
{% endblock %}