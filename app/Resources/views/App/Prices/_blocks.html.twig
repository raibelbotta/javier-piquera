{% block receivable %}
    {% spaceless %}
        <div class="input-group">
            <input type="text" name="" id="" class="form-control input-sm text-right" value="{{ value }}" data-id="type:receivable;service:{{ service.id }};provider:{{ provider.id|default('0')}}">
            <span class="input-group-btn">
                <button type="button" class="btn btn-default btn-sm btn-clear-price">
                    <span class="fa fa-remove"></span>
                </button>
            </span>
        </div>
    {% endspaceless %}
{% endblock %}

