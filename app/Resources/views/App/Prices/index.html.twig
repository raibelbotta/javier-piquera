{% extends "frontend.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Cat√°logo de precios</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row" style="margin-bottom: 10px;">
        <div class="col-lg-12">
            <div class="pull-right">
                <div class="btn-group">
                    <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Herramientas <span class="caret"></span></button>
                    <ul class="dropdown-menu pull-right" role="menu">
                        <li><a href="{{ path('app_prices_print') }}" target="_blank" id="link-print"><span class="fa fa-print"></span> Imprimir precios</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <form action="" role="form" id="filter">
        <div class="row">
            <div class="col-xs-12 form-group">
                <label for="filter_provider">Agencia</label>
                <select name="filter[provider]" id="filter_provider">
                    <option value="">--- Precios predefinidos por servicio ---</option>
                    {% for provider in providers.result %}
                        <option value="{{ provider.id }}">{{ provider }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-lg-12">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover table-condensed" id="table-x"></table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
{% endblock %}

{% block page_javascripts %}
    <script>
        $(document).ready(function() {
            App.Prices.Index.init();
        });
    </script>
{% endblock %}
