{% extends "frontend.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Proveedores para terceros <small>listado</small></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row" style="margin-bottom: 10px;">
        <div class="col-lg-12">
            <div class="pull-right">
                <a href="{{ path("app_admin_providers_new") }}" class="btn btn-success">
                    <i class="fa fa-plus-circle"></i>
                    Crear proveedor
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="providers"></table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
{% endblock %}

{% block page_javascripts %}
    <script>
        $(document).ready(function() {
            var table = $('table#providers');

            table.on('preDraw.dt', function() {
                $(this).block();
            }).on('draw.dt', function() {
                $(this).unblock();
            }).dataTable({
                ajax: {
                    url: Routing.generate('app_admin_providers_getdata'),
                    method: 'GET',
                    error: function(xhr, errorName, errorString) {
                        alert('Error cargando datos de listado. Respuesta: ' + errorString);
                    }
                },
                columns: [
                    {
                        name: 'name',
                        title: 'Nombre'
                    },
                    {
                        sortable: false,
                        searchable: false,
                        width: '80px'
                    }
                ],
                serverSide: true
            });

            table.on('click', '.btn-delete', function(event) {
                event.preventDefault();

                if (confirm('Â¿Desea eliminar este proveedor?')) {
                    var url = $(this).attr('href');
                    $(this).parent().text('Eliminando...');

                    $.ajax({
                        url: url,
                        method: 'POST',
                        success: function() {
                            table.DataTable().draw(true);
                        }
                    });
                }
            });
        });
    </script>
{% endblock %}
