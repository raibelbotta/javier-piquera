<div class="panel panel-default">
    <div class="panel-heading">
        Datos del lugar
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                {{ form_label(form.name, 'Nombre', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                <div class="help-block"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {{ form_label(form.postalAddress, 'Dirección postal', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.postalAddress, {'attr': {'class': 'form-control'}}) }}
                <div class="help-block"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-lg-6">
                {{ form_label(form.mobilePhone, "Teléfono móvil", {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.mobilePhone, {'attr': {'class': 'form-control'}}) }}
                <div class="help-block"></div>
            </div>
            <div class="col-xs-12 col-lg-6">
                {{ form_label(form.fixedPhone, "Teléfono fijo", {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.fixedPhone, {'attr': {'class': 'form-control'}}) }}
                <div class="help-block"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {{ form_label(form.location, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
                <div class="help-block"></div>
            </div>
        </div>
    </div>
</div>
