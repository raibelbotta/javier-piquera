{% extends "frontend.html.twig" %}

{% block page_stylesheets %}
    <link rel="stylesheet" href="{{ asset("plugins/bootstrap-fileupload/bootstrap-fileupload.css") }}">
{% endblock %}

{% form_theme form "::forms.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Mis datos <small>editar</small></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    {{ form_start(form, {"action": path("fos_user_profile_edit"), "attr": {"role": "form", "id": "profile"}}) }}
        <div class="row">
            <div class="col-lg-8">
                <div class="panel panel-default">
                    <div class="panel-heading">Datos personales</div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                {{ form_label(form.fullName, 'Nombre completo', {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.fullName, {'attr': {'class': 'form-control'}}) }}
                                <div class="help-block"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">Datos de seguridad</div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6 col-xs-12">
                                {{ form_label(form.plainPassword.first, 'Nueva contraseña', {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                                <div class="help-block"></div>
                            </div>
                            <div class="col-lg-6 col-xs-12">
                                {{ form_label(form.plainPassword.second, 'Confirmar contraseña', {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                                <div class="help-block"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="panel panel-default">
                    <div class="panel-heading">Imagen</div>
                    <div class="panel-body">
                        {{ form_widget(form.imageFile) }}
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="actions">
                    <button class="btn btn-success" type="submit">
                        <i class="fa fa-save"></i>
                        Guardar
                    </button>
                    <a href="{{ path("fos_user_profile_show") }}" class="btn btn-default">
                        <i class="fa fa-undo"></i>
                        Cancelar
                    </a>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock page_content %}

{% block page_javascripts %}
    <script src="{{ asset("plugins/bootstrap-fileupload/bootstrap-fileupload.js") }}"></script>
    <script src="{{ asset('js/form-profile.js') }}"></script>
    <script>
        $(document).ready(function() {
            App.Profile.init();
        });
    </script>
{% endblock %}